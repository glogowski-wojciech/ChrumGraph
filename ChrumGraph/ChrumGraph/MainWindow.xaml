<Window x:Class="ChrumGraph.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chrum graph" Height="525" Width="525" MinHeight="250" MinWidth="250"
        MouseMove="Window_MouseMove"
        MouseDown="Window_MouseDown">
    <Grid>
        <DockPanel>
            <Menu Name="MainMenu" Height="20" VerticalAlignment="Top">
                <MenuItem Header="Open" Click="OpenClick">
                </MenuItem>
                <MenuItem Header="Save" Click="SaveClick">

                </MenuItem>
                <MenuItem Header="Add">
                    <MenuItem Header="Vertex" Click="AddVertex">
                        
                    </MenuItem>
                    <MenuItem Header="Edge" Click="AddEdge">

                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Remove" Visibility="Hidden">
                    <MenuItem Header="Vertex">

                    </MenuItem>
                    <MenuItem Header="Edge">

                    </MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>
        
        <Canvas Name="MainCanvas" HorizontalAlignment="Stretch" Margin="0,20,0,0" VerticalAlignment="Stretch" Background="#AAAAAA"/>

    </Grid>
</Window>
